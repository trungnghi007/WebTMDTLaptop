@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 title-highlight">Báo cáo tháng</h2>


    <div class="row mb-4">
        <div class="col-md-3 d-flex align-items-stretch">
            <div class="card text-white bg-warning shadow-sm rounded h-200 w-100">
                <div class="card-body">
                    <h5 class="card-title">Đang chờ xử lý</h5>
                    <h2 class="card-text">@ViewBag.PendingOrders</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 d-flex align-items-stretch">
            <div class="card text-white bg-success shadow-sm rounded h-200 w-100">
                <div class="card-body">
                    <h5 class="card-title">Đã duyệt</h5>
                    <h2 class="card-text">@ViewBag.ApprovedOrders</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 d-flex align-items-stretch">
            <div class="card text-white bg-danger shadow-sm rounded h-200 w-100">
                <div class="card-body">
                    <h5 class="card-title">Đã hủy</h5>
                    <h2 class="card-text">@ViewBag.CancelledOrders</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 d-flex align-items-stretch">
            <div class="card text-white bg-info shadow-sm rounded h-200 w-100">
                <div class="card-body">
                    <h5 class="card-title">Đã giao</h5>
                    <h2 class="card-text">@ViewBag.DeliveredOrders</h2>
                </div>
            </div>
        </div>
    </div>

    <h3 class="text-center mb-3">Doanh thu theo trạng thái</h3>
    <div class="row mb-4">
        <div class="col-md-3 d-flex align-items-stretch">
            <div class="card text-white bg-primary shadow-sm rounded h-200 w-100">
                <div class="card-body">
                    <h5 class="card-title">Đang chờ xử lý</h5>
                    <h2 class="card-text">@ViewBag.RevenuePending</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 d-flex align-items-stretch">
            <div class="card text-white bg-warning shadow-sm rounded h-200 w-100">
                <div class="card-body">
                    <h5 class="card-title">Đã duyệt</h5>
                    <h2 class="card-text">@ViewBag.RevenueApproved</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 d-flex align-items-stretch">
            <div class="card text-white bg-info shadow-sm rounded h-200 w-100">
                <div class="card-body">
                    <h5 class="card-title">Đã giao</h5>
                    <h2 class="card-text">@ViewBag.RevenueDelivered</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 d-flex align-items-stretch">
            <div class="card text-white bg-danger shadow-sm rounded h-200 w-100">
                <div class="card-body">
                    <h5 class="card-title">Đã hủy</h5>
                    <h2 class="card-text">@ViewBag.RevenueCancelled</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mb-4">
        <a href="@Url.Action("XuatBaoCaoDoanhThu", "Admin")" class="btn btn-primary">
            Xuất báo cáo doanh thu ra Excel
        </a>
    </div>
    <h3 class="text-center mb-3">Top 5 sản phẩm bán chạy</h3>
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng bán</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in ViewBag.BestSellingProducts)
                    {
                        <tr>
                            <td>@product.TenSanPham</td>
                            <td>@product.SoLuong</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .title-highlight {
        font-size: 2.5rem; /* Kích thước chữ lớn hơn */
        font-weight: bold; /* Đậm */
        color: #007bff; /* Màu xanh dương */
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); /* Hiệu ứng đổ bóng */
        margin-bottom: 1rem; /* Khoảng cách dưới tiêu đề */
    }

    .card {
        margin-bottom: 20px;
        border-radius: 12px; /* Bo góc card */
        transition: transform 0.3s; /* Hiệu ứng hover */
    }

        .card:hover {
            transform: scale(1.05); /* Phóng to card khi hover */
        }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center; /* Căn giữa tiêu đề */
    }

    .card-text {
        font-size: 2rem;
        text-align: center; /* Căn giữa giá trị */
    }

    .table {
        border-radius: 8px; /* Bo góc bảng */
        overflow: hidden;
    }

        .table th,
        .table td {
            vertical-align: middle;
            text-align: center; /* Căn giữa nội dung bảng */
        }

    .table-hover tbody tr:hover {
        background-color: #e9ecef; /* Thay đổi màu nền khi hover */
    }

    .text-success {
        font-weight: bold;
        color: #28a745 !important;
    }
</style>

<!-- Thêm các thư viện JS cần thiết cho Bootstrap -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
