
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Đăng Nhập</title>
    <!-- Liên kết Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Gradient nền cho toàn bộ trang */
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            min-height: 100vh; /* Chiều cao tối thiểu toàn bộ màn hình */
            display: flex; /* Dùng flexbox để căn giữa */
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
        }

        /* Hộp đăng nhập (login box) */
        .login-box {
            background-color: white; /* Nền trắng */
            padding: 2rem; /* Khoảng cách padding bên trong */
            border-radius: 15px; /* Bo góc hộp đăng nhập */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
            width: 100%;
            max-width: 400px; /* Chiều rộng tối đa 400px */
        }

        /* Tùy chỉnh trường nhập liệu */
        .form-control {
            border-radius: 30px; /* Bo tròn các trường nhập */
            padding: 0.75rem 1.5rem; /* Khoảng cách bên trong trường nhập */
        }

        /* Tùy chỉnh nút đăng nhập */
        .btn-custom {
            background: #6a11cb; /* Màu gradient bắt đầu */
            background: linear-gradient(to right, #6a11cb, #2575fc); /* Gradient chuyển màu */
            color: white; /* Màu chữ trắng */
            border-radius: 30px; /* Bo tròn nút */
            padding: 0.75rem 1.5rem; /* Khoảng cách bên trong nút */
            width: 100%; /* Chiều rộng bằng 100% */
            transition: background 0.3s ease-in-out; /* Hiệu ứng chuyển màu khi hover */
        }

            /* Hiệu ứng hover cho nút đăng nhập */
            .btn-custom:hover {
                background: #2575fc; /* Màu gradient khi hover */
                background: linear-gradient(to right, #2575fc, #6a11cb);
            }

        /* Tùy chỉnh logo đăng nhập */
        .login-logo {
            font-size: 2rem; /* Cỡ chữ lớn */
            font-weight: bold; /* Chữ đậm */
            color: #2575fc; /* Màu xanh gradient */
            text-align: center; /* Căn giữa logo */
            margin-bottom: 1rem; /* Khoảng cách bên dưới logo */
        }

        /* Tùy chỉnh thêm */
        .login-box a {
            color: #2575fc; /* Màu liên kết */
        }

            .login-box a:hover {
                text-decoration: underline; /* Hiệu ứng gạch chân khi hover liên kết */
            }
    </style>
</head>

<body>
    @if (ViewBag.ErrorMessage != null)
    {
        <script>
        alert('@Html.Raw(ViewBag.ErrorMessage)');
        </script>
    }
    <!-- Hộp đăng nhập chính -->
    <div class="login-box">
        <!-- Logo của trang đăng nhập -->
        <div class="login-logo">Đăng Nhập</div>

        <!-- Form đăng nhập -->
        <form action="/Login/DangNhap" method="post">
            <!-- Trường nhập email -->
            <div class="mb-3">
                <input type="text" name="tenDangNhap" class="form-control" placeholder="Tài khoản" required>
            </div>

            <!-- Trường nhập mật khẩu -->
            <div class="mb-3">
                <input type="password" name="matKhau" class="form-control" placeholder="Mật khẩu" required>
            </div>

            <!-- Nút đăng nhập -->
            <div class="d-grid">
                <button type="submit" class="btn btn-custom">Đăng Nhập</button>
            </div>

            <!-- Liên kết đăng ký hoặc quên mật khẩu -->
            <div class="text-center mt-3">
                <a href="@Url.Action("QuenMatKhau","Home")">Quên mật khẩu?</a>

            </div>
        </form>
    </div>

    <!-- Liên kết JavaScript của Bootstrap 5 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
