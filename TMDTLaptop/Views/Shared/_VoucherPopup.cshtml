@model IEnumerable<TMDTLaptop.Models.Voucher>

<script>
    $(document).ready(function () {
        // Hiển thị tất cả các modal voucher
        @foreach (var voucher in Model)
        {
            <text>
                $('#voucherPopup-@voucher.MaVoucher').modal('show'); // Hiển thị modal cho voucher
            </text>
        }
    });
</script>
@foreach (var voucher in Model)
{

    <div class="modal fade" id="voucherPopup-@voucher.MaVoucher" tabindex="-1" role="dialog" aria-labelledby="voucherPopupLabel-@voucher.MaVoucher" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="voucherPopupLabel-@voucher.MaVoucher">Thông tin Voucher</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p><strong>Mô tả:</strong> @voucher.MoTa</p>
                    <p><strong>Mã Code:</strong> @voucher.Code</p>
                    <p><strong>Giảm giá:</strong> @voucher.GiamGia %</p>
                    <p><strong>Ngày hết hạn:</strong> @voucher.NgayKetThuc.Value.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
}