@{
    ViewBag.Title = "Quên mật khẩu";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Quên mật khẩu</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center">
                        Nhập địa chỉ email để nhận mật khẩu mới.
                    </p>

                    @using (Html.BeginForm("QuenMatKhau", "Home", FormMethod.Post))
                    {
                        <div class="form-group mb-3">
                            <label for="userEmail" class="form-label">Địa chỉ Email</label>
                            <input type="email" name="userEmail" class="form-control" placeholder="Nhập email của bạn" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Gửi mật khẩu mới</button>
                    }

                    <p class="text-success mt-3 text-center">@ViewBag.Message</p>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("DangNhap", "Home")" class="btn btn-link">Quay lại đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>
