@{
    Layout = null; // Không dùng layout chung để giữ trang 404 đơn giản
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Không Tìm Thấy Trang</title>

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
        }

        .error-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            flex-direction: column;
        }

        .error-code {
            font-size: 10rem;
            font-weight: 900;
            color: #007bff;
        }

        .error-message {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .btn-back-home {
            margin-top: 2rem;
            padding: 0.75rem 1.5rem;
            font-size: 1.2rem;
        }

        .illustration {
            max-width: 500px;
            width: 100%;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="text-center">
            <!-- Mã lỗi -->
            <div class="error-code">404</div>
            <!-- Thông báo lỗi -->
            <div class="error-message">Oops! Trang bạn tìm kiếm không tồn tại.</div>
            <!-- Nút quay lại trang chủ -->
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-back-home">Quay lại trang chủ</a>
            <!-- Hình minh họa lỗi 404 -->

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
